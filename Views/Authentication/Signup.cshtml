@model noeTaskManager_app.Models.AuthModels.SignupModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="h-70">
    <h1>Sign Up</h1>
    @Html.ValidationSummary(true)
    @using (Html.BeginForm("AuthSignup", "Authentication", FormMethod.Post))
    {
            @Html.AntiForgeryToken()
        <div class="form-row input-group  align-items-center">
            <div class="form-group col-md-6">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", type = "text", placeholder = "First Name", aria_label = "First Name", required = "required" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
                <div class="form-group col-md-6">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", type = "text", placeholder = "Last Name", aria_label = "Last Name", required = "required" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="mt-3">
                <div class="form-group col-md-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">&#64;</span>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Email", aria_label = "Email", required = "required" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">#</span>
                        </div>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", placeholder = "Password", aria_label = "Password", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-success">Sign Up</button>
        <p>Already have an account? <a class="btn btn-link" asp-controller="Authentication" asp-action="Signin">Sign in</a></p>
  

    }
</div>
